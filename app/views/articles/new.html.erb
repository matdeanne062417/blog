<%# idedeclare kung san pupunta ung action natin %>
<%# equivalent ng html %>
<h1>Create New Article</h1>
<%= form_with scope: :article, url: create_article_path, local: true do |f| %>
<p>
    <% if @article.errors.any? %>
        <ul id = "error_explanation">
            <% @article.errors.full_messages.each do |message| %>
             <li>
                <%= message%>
             </li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :body %>
    <%= f.text_area :body %>
</p>

<p>

    <%= f.submit %>

</p>

<% end %>

<%= link_to 'Back to Article',articles_path %>